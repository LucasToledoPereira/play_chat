# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST  /login                        controllers.Application.addMember

GET  /login                         controllers.Application.renderLogin

GET  /chat                   		controllers.Application.renderChat

GET  /getMembers                    controllers.Application.getMembers

GET  /chatFeed/:room        		controllers.Application.chatFeed(room: String)

POST /chat                  		controllers.Application.postMessage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: String)
